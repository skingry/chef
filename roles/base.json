{
  "name": "base",
  "description": "Drop The Bass",
  "run_list": [
    "recipe[chef-client]",
    "recipe[dns::client]",
    "recipe[hostname]",
    "recipe[git]",
    "recipe[filer]",
    "recipe[ntp]",
    "recipe[openssh]",
    "recipe[sudo]",
    "recipe[timezone-ii]",
    "recipe[users::sysadmins]",
    "recipe[unzip]"
  ],
  "default_attributes": {
    "chef_client": {
      "interval": "300",
      "splay": "60"
    },
    "dns": {
      "master": "192.168.15.254"
    },
    "ntp": {
      "servers": ["ns0.local.pvt"]
    },
    "openssh": {
      "server": {
        "permit_root_login": "without-password"
      }
    },
    "tz": "America/New_York"
  }
}
