server {
  listen 8082;
  server_name plex.prod.robotozon.com;

  access_log /var/log/nginx/plex.prod.robotozon.com-access.log;
  error_log /var/log/nginx/plex.prod.robotozon.com-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO http;

  client_max_body_size 50M;
  proxy_buffer_size 4k;
  proxy_busy_buffers_size 64k;
  proxy_temp_file_write_size 64k;
  proxy_max_temp_file_size 100M;
  proxy_read_timeout 210;
  proxy_buffers 256 64k;

  root /usr/share/nginx/plexwatch;
  error_page 500 502 503 504 /50x.html;

  index index.php;

  location / {
    allow                  192.168.0.0/16;
    deny                   all;
  }

  location ~ \.php$ {
    try_files $uri =404;
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    include fastcgi_params;
  }
}

