server {
  listen 80;
  server_name sabnzbd.robotozon.com;

  access_log /var/log/nginx/sabnzbd.robotozon.com-access.log main;
  error_log /var/log/nginx/sabnzbd.robotozon.com-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO http;

  client_max_body_size 50M;
  proxy_buffer_size 4k;
  proxy_busy_buffers_size 64k;
  proxy_temp_file_write_size 64k;
  proxy_max_temp_file_size 100M;
  proxy_read_timeout 210;
  proxy_buffers 256 64k;

  root /usr/share/nginx/www;
  error_page 500 502 503 504 /50x.html;

  location / {
    satisfy                any;
    allow                  192.168.0.0/16;
    deny                   all;
    auth_basic             "Restricted";
    auth_basic_user_file   htpasswd;

    if (!-f $request_filename){
      proxy_pass http://sabnzbd.local.pvt:8080;
    }
  }
}

